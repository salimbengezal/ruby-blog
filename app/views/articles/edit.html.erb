<% if user_signed_in? %>
<div class="row">
	<div class="col-md-7 col-md-offset-2">
		<h2> Редактирование записи </h2>

		<% if user_signed_in? %>
		<%= render 'form' %>
		<% else %>
		<p>Пожалуйста <%=link_to "Войдите", new_user_session_path%> или <%=link_to "Зарегистрируйтесь", new_user_registration_path %> чтобы редактировать </p>
		<%end%>

	</div>
</div>
<% end %>
